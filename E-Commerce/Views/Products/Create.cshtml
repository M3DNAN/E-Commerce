
<div class="row">
    <form action="AddToDb" method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="exampleProductName" class="form-label">Product Name</label>
            <input name="Name" type="text" class="form-control" id="exampleProductName">
        </div>
        <div class="mb-3">
            <label for="exampleProductDescription" class="form-label">Product Description</label>
            <input name="Description" type="text" class="form-control" id="exampleProductDescription">
        </div>
        <div class="mb-3">
            <label for="exampleProductPrice" class="form-label">Product Price</label>
            <input name="Price" type="number" class="form-control" id="exampleProductPrice">
        </div>
        <div class="mb-3">
            <label for="exampleProductRating" class="form-label">Product Rating</label>
            <input name="Rating" type="number" class="form-control" id="exampleProductRating">
        </div>
        <div class="mb-3">
            <label for="exampleProductPhotoUrl" class="form-label">Product Photo</label>
            <input name="PhotoUrl" type="file" class="form-control" id="exampleProductPhotoUrl">
        </div>
        <div>
            <label for="exampleSelect1" class="form-label mt-4">Category select</label>
            <select name="CategoryId" class="form-select" id="exampleSelect1">

        @foreach(var item in Model)
        {
                    <option value="@item.Id" >@item.Name</option>
        }
            </select>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>